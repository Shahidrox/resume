<body class="eternity-form">
    <section class="colorBg1 colorBg" id="demo1" data-panel="first">
        <div class=" container">
            <div class="login-form-section">

                <div class="login-content " data-animation="bounceIn">
                    <div class="section-title">
                        <h3>LogIn to your Account</h3>
                    </div>
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                        <div class="textbox-wrap">
                            <div class="input-group">
                                <span class="input-group-addon "><i class="icon-user icon-color"></i></span>
                                <%= f.email_field :email, autofocus: true, :placeholder=>"Username", :class=>"form-control", :required=>"required" %>
                            </div>
                        </div>
                        <div class="textbox-wrap">
                            <div class="input-group">
                                <span class="input-group-addon "><i class="icon-key icon-color"></i></span>
                                <%= f.password_field :password, autocomplete: "off", :class=>"form-control", :placeholder=>"Password", :required=>"required" %>
                            </div>
                        </div>
                        <div class="login-form-action clearfix">
                            <div class="checkbox pull-left">
                                <div class="custom-checkbox">
                                    <% if devise_mapping.rememberable? -%>
                                        <%= f.check_box :remember_me, :checked=>"checked"%>
                                    <% end %>
                                </div>
                                <span class="checkbox-text pull-left">&nbsp;Remember Me</span>
                            </div>
                            <button type="submit" class="btn btn-success pull-right green-btn">LogIn &nbsp; <i class="icon-chevron-right"></i></button>
                        </div>
                    <% end %>
                </div>


                <div class="login-form-links link2 " data-animation="fadeInRightBig" data-animation-delay=".4s">
                    <p><%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), :class=>"btn btn-success pull-right blue-btn " %>
                        <%= link_to "Sign in with Linkedin",user_omniauth_authorize_path(:linkedin), :class=>"btn btn-success pull-left green-btn " %>
                    </p><br><br>
                    <p>
                        <%= link_to "Sign in with Twitter", user_omniauth_authorize_path(:twitter), :class=>"btn btn-success pull-right green-btn " %>
                        <%= link_to "Sign in with Google", user_omniauth_authorize_path(:google_oauth2), :class=>"btn btn-success pull-left blue-btn" %>
                    </p><br>
                </div>


                <div class="login-form-links link1 " data-animation="fadeInLeftBig" data-animation-delay=".2s">
                    <h4 class="blue">Don't have an Account?</h4>
                    <span>No worry</span>
                    <a href="/users/sign_up" class="blue">Click Here</a>
                    <span>to Register</span>
                </div>

                <div class="login-form-links link2 " data-animation="fadeInRightBig" data-animation-delay=".4s">
                    <h4 class="green">Forget your Password?</h4>
                    <span>Dont worry</span>
                    <a href="/users/password/new" class="green">Click Here</a>
                    <span>to Get New One</span>
                </div>
            </div>
        </div>
    </section>
</body>